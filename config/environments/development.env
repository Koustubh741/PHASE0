# Development Environment Configuration
# GRC Platform Development Settings

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=grc_platform
POSTGRES_USER=grc_user
POSTGRES_PASSWORD=grc_password
DATABASE_URL=postgresql://grc_user:grc_password@localhost:5432/grc_platform

# Database Connection Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=demo-secret-key-change-in-development
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION_MINUTES=5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=1
RELOAD=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true

# BFSI AI Configuration
BFSI_AI_HOST=localhost
BFSI_AI_PORT=8001
BFSI_AI_MODEL_PATH=./models
BFSI_AI_MAX_WORKERS=2
BFSI_AI_TIMEOUT=300
BFSI_AI_CACHE_TTL=1800

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=./logs/development.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=3

# Development Features
ENABLE_SWAGGER=true
ENABLE_REDOC=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_HOT_RELOAD=true
