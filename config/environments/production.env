# Production Environment Configuration
# GRC Platform Production Settings

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=grc_platform
POSTGRES_USER=grc_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DATABASE_URL=postgresql://grc_user:CHANGE_ME_SECURE_PASSWORD@postgres:5432/grc_platform

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_MAX_CONNECTIONS=50
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379/0

# Security Configuration
SECRET_KEY=CHANGE_ME_JWT_SECRET_KEY
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=1
PASSWORD_MIN_LENGTH=12
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4
RELOAD=false
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com

# Frontend Configuration
REACT_APP_API_URL=https://api.your-domain.com/api/v1
REACT_APP_ENVIRONMENT=production
REACT_APP_DEBUG=false

# BFSI AI Configuration
BFSI_AI_HOST=bfsi-ai-agents
BFSI_AI_PORT=8001
BFSI_AI_MODEL_PATH=/app/models
BFSI_AI_MAX_WORKERS=8
BFSI_AI_TIMEOUT=600
BFSI_AI_CACHE_TTL=3600

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=/app/logs/production.log
LOG_MAX_FILE_SIZE=52428800
LOG_BACKUP_COUNT=10

# Production Features
ENABLE_SWAGGER=false
ENABLE_REDOC=false
ENABLE_DEBUG_TOOLBAR=false
ENABLE_HOT_RELOAD=false

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
FORCE_HTTPS=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups
