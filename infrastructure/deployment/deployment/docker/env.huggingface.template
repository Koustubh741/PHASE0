# Hugging Face Transformers Configuration
# Copy this file to .env and update the values as needed

# Hugging Face Service Configuration
HUGGINGFACE_SERVICE_URL=http://localhost:8007
DEFAULT_MODEL_NAME=microsoft/DialoGPT-medium
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Model Configuration
MAX_MODEL_SIZE=2GB
ENABLE_GPU=false
TOKENIZERS_PARALLELISM=false

# Cache Configuration
HUGGINGFACE_HUB_CACHE=/app/models_cache
TRANSFORMERS_CACHE=/app/models_cache
HF_HOME=/app/models_cache

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300
MODEL_LOAD_TIMEOUT=600

# Alternative Models (uncomment to use)
# DEFAULT_MODEL_NAME=distilgpt2
# DEFAULT_MODEL_NAME=gpt2
# DEFAULT_MODEL_NAME=facebook/blenderbot-400M-distill
# EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
# EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# GPU Configuration (if available)
# ENABLE_GPU=true
# CUDA_VISIBLE_DEVICES=0

# Database Configuration
DATABASE_URL=postgresql://grc_user:grc_password@postgres:5432/grc_platform
REDIS_URL=redis://redis:6379

# Vector Database Configuration
CHROMA_HOST=chroma
CHROMA_PORT=8000
VECTOR_DB_PATH=/app/vector_db

# API Configuration
PORT=8007
API_HOST=0.0.0.0
LOG_LEVEL=INFO

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090


