# BFSI Security Configuration Environment Variables
# Copy this file to .env and set your actual values

# Environment Configuration
BFSI_SECURITY_ENVIRONMENT=development

# CORS Configuration
BFSI_SECURITY_CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# API Key Configuration
# These are the required API keys for different client types
# Format: BFSI_SECURITY_API_KEY_<CLIENT_NAME>=<YOUR_API_KEY>
# 
# IMPORTANT: Replace the example values below with your actual secure API keys
# These keys should be:
# - At least 8 characters long
# - Contain only alphanumeric characters, hyphens, and underscores
# - Unique and securely generated
# - Stored securely (use a secrets management service in production)

# Admin client API key
BFSI_SECURITY_API_KEY_ADMIN_CLIENT=your-secure-admin-key-here

# Compliance client API key  
BFSI_SECURITY_API_KEY_COMPLIANCE_CLIENT=your-secure-compliance-key-here

# Analytics client API key
BFSI_SECURITY_API_KEY_ANALYTICS_CLIENT=your-secure-analytics-key-here

# JWT Configuration (optional - will use defaults if not set)
# BFSI_SECURITY_JWT_SECRET_KEY=your-jwt-secret-key
# BFSI_SECURITY_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
# BFSI_SECURITY_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption Configuration (optional - will use defaults if not set)
# BFSI_SECURITY_ENCRYPTION_KEY=your-encryption-key
# BFSI_SECURITY_DATA_ENCRYPTION_ENABLED=true

# Rate Limiting Configuration (optional)
# BFSI_SECURITY_RATE_LIMIT_REQUESTS_PER_MINUTE=60
# BFSI_SECURITY_RATE_LIMIT_BURST=10

# Database Security (optional)
# BFSI_SECURITY_DB_CONNECTION_POOL_SIZE=10
# BFSI_SECURITY_DB_CONNECTION_TIMEOUT=30
# BFSI_SECURITY_DB_ENCRYPTION_ENABLED=true

# Audit Logging (optional)
# BFSI_SECURITY_AUDIT_LOG_ENABLED=true
# BFSI_SECURITY_AUDIT_LOG_RETENTION_DAYS=2555
# BFSI_SECURITY_AUDIT_LOG_ENCRYPTION=true

# Data Retention (optional)
# BFSI_SECURITY_DATA_RETENTION_DAYS=2555
# BFSI_SECURITY_AUTO_CLEANUP_ENABLED=true

# PCI-DSS Compliance (optional)
# BFSI_SECURITY_PCI_DSS_ENABLED=true
# BFSI_SECURITY_CARD_DATA_ENCRYPTION=true
# BFSI_SECURITY_TRANSACTION_SIGNING=true

# GDPR Compliance (optional)
# BFSI_SECURITY_GDPR_ENABLED=true
# BFSI_SECURITY_DATA_ANONYMIZATION=true
# BFSI_SECURITY_CONSENT_TRACKING=true

# Security Headers (optional)
# BFSI_SECURITY_SECURITY_HEADERS_ENABLED=true

# Session Security (optional)
# BFSI_SECURITY_SESSION_TIMEOUT_MINUTES=30
# BFSI_SECURITY_SESSION_ENCRYPTION=true